<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReceiveActivity"
    android:background="@color/zupColorBlue"
    android:id="@+id/receive_main"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/framelayout_border_forms"
        android:padding="5dp"
        android:layout_margin="@dimen/margin_default"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_pattern"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/name_receive"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_name"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_last_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/lastname_receive"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_last_name"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_tel"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_last_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/tel_receive"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/txt_receive_cel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_tel"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_cel"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_cel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_tel"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/celular_receive"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_cpf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_cel"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_cpf"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_cel"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/cpf_receive"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_cpf"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/txt_escolaridade"
                android:textColor="@android:color/white"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_cpf"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_school"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_zip_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_school"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/txt_endereco"
                android:textColor="@android:color/white"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_zip_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_school"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_zip_code"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_neighborhood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_zip_code"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/txt_neighborhood"
                android:textColor="@android:color/white"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_neighborhood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_zip_code"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_neighborhood"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_pattern_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_default"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_neighborhood"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="@string/txt_stats"
                android:textColor="@android:color/white"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receive_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_pattern_neighborhood"
                app:layout_constraintLeft_toRightOf="@id/txt_pattern_stats"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/margin_default"
                android:textSize="@dimen/text_default"
                android:padding="@dimen/padding_default"
                android:textColor="@color/zupColorGreen"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/float_receive_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                app:srcCompat="@drawable/ic_check_circle_outline_24px"
                app:layout_constraintTop_toBottomOf="@id/txt_receive_neighborhood"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>